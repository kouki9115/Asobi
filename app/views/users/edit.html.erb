<% if @user.errors.any? %>
 <%= @user.errors.count %>件のエラーが発生しました
 <% @user.errors.full_messages.each do |message| %>
 <%= message %>
 <% end %>
 <% end %>

<div class="containar">
<h2>編集</h2>
<div class ="row", style=" margin: 0;">

<%= form_with model:@user, local:true do |f| %>
  <label for="inputName">Name</label>
  <%= f.text_field :name, autofocus: true, id:"inputName", placeholder:"名前"%><br>

  <label for="introduction">Introduction</label>
  <%= f.text_area :introduction, id:"inputintroduction" %><br>

  <%= attachment_image_tag @user, :profile_image, :fill, 60, 60 %>
  <label for="inputImage">ProfileImage</label>
  <%= f.attachment_field :profile_image, placeholder: "プロフィール画像" %><br>

  <%= f.submit "変更を保存" %>
<% end %>
</div>
</div>
