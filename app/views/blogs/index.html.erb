<main>
 <% if @blog.errors.any? %>
 <%= @blog.errors.count %>件のエラーが発生しました
 <% @blog.errors.full_messages.each do |message| %>
 <%= message %>
 <% end %>
 <% end %>

 <h1>連絡網</h1>
<div class="containar">
 <div class="row">
  <div class="col-lg-4">
   <h1>事件</h1>
   <%= form_with model: @blog, local:true do |f| %>
   <h4>鬼</h4>
   <%= f.text_field :title %>
   <h4>位</h4>
   <%= f.text_field :category %>
   <h4>内容</h4>
   <%= f.text_area :body %>
   <h4>写真</h4>
   <%= f.attachment_field :image %>

   <%= f.submit '投稿'%>
   <% end %>
  </div>

  <div class="col-lg-8">
   <table>
    <thead>
     <tr>
      <th>鬼</th>
      <th>位</th>
      <th>写真</th>
      <th>内容</th>
      <th>投稿日時</th>
      <th calspan="2"></th>
     </tr>
    </thead>
    <tbody>
    <% @blogs.each do |blog| %>
     <tr>
      <th><%= blog.title %></th>
      <th><%= blog.category %></th>
      <th><%= attachment_image_tag blog, :image, :fill, 50, 50, format: 'jpeg' %></th>
      <th><%= blog.body %></th>
      <th><%= blog.created_at.to_s(:datetime_jp) %></th>
      <th><%= link_to "詳細", blog_path(blog) %></th>
      <th><%= link_to "削除", blog_path(blog), method: :delete %></th>
     </tr>
    </tbody>
    <% end %>
   </table>
  </div>
 </div>
</div>
</main>